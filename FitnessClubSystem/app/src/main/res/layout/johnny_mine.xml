<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/PersonalMainLayoutStyle" >
    <include layout="@layout/top"/>
    <RelativeLayout style="@style/FindBottomStyle">
        <ImageView
            android:id="@+id/img_johnny_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/name" />

        <TextView
            android:id="@+id/text_johnny_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_johnny_name"
            android:text="姓名"
            android:textColor="#636363" />

        <ImageView
            android:id="@+id/img_johnny_name_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_right_arrow" />

        <TextView
            android:id="@+id/text_johnny_true_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/img_johnny_name_right"
            android:text="保护我方冉旭松" />

        <ImageView
            android:id="@+id/johnny_name_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#efeeee" />
    </RelativeLayout>

    <RelativeLayout style="@style/FindBottomStyle">
        <ImageView
            android:id="@+id/img_johnny_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/sex" />

        <TextView
            android:id="@+id/text_johnny_user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_johnny_sex"
            android:text="性别"
            android:textColor="#636363" />

        <ImageView
            android:id="@+id/img_johnny_sex_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_right_arrow" />

        <TextView
            android:id="@+id/text_johnny_true_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/img_johnny_sex_right"
            android:text="女" />

        <ImageView
            android:id="@+id/johnny_sex_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#efeeee" />
    </RelativeLayout>

    <RelativeLayout style="@style/FindBottomStyle">


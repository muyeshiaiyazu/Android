<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top2" />

    <ImageView
        android:id="@+id/img_course"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="145dp"
        android:background="@mipmap/head" />

    <RelativeLayout style="@style/FindBottomStyle">
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:text="课程名"
            android:textColor="#636363" />

        <EditText
            android:id="@+id/edit_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="124dp"
            android:ems="10"
            android:inputType="text"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/name_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#efeeee" />
    </RelativeLayout>

    <RelativeLayout style="@style/FindBottomStyle">
        <TextView
            android:id="@+id/text_instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:text="教练"
            android:textColor="#636363" />

        <EditText
            android:id="@+id/edit_instructor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="124dp"
            android:ems="10"
            android:inputType="text"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/instructor_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#efeeee" />
    </RelativeLayout>

    <RelativeLayout style="@style/FindBottomStyle">
        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:text="内容"
            android:textColor="#636363" />

        <EditText
            android:id="@+id/edit_course_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="124dp"
            android:ems="10"
            android:inputType="text"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/content_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#efeeee" />
    </RelativeLayout>

    <RelativeLayout style="@style/FindBottomStyle">
        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:text="上课时间"
            android:textColor="#636363" />

        <EditText
            android:id="@+id/edit_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="124dp"
            android:ems="10"
            android:inputType="text"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/time_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#efeeee" />
    </RelativeLayout>

    <RelativeLayout style="@style/FindBottomStyle">
        <TextView
            android:id="@+id/text_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:text="费用"
            android:textColor="#636363" />

        <EditText
            android:id="@+id/edit_course_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="124dp"
            android:ems="10"
            android:inputType="text"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/pay_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#efeeee" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_add_course"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="125dp"
        android:textSize="18dp"
        android:background="@drawable/my_style"
        android:text="新建课程" />

</LinearLayout>